<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishRegistrationUserActivity"
    android:background="@color/colorPink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_horizontal"
                android:text="登録完了"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="75dp"
                android:gravity="center_horizontal"
                android:text="登録が完了しました。ありがとうございます。"
                android:textColor="#ffffff" />

            <View
                android:id="@+id/view10"
                android:layout_width="330dp"
                android:layout_height="90dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/stroke" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="130dp"
                android:text="  b    保有食品"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="125dp"
                android:background="@color/colorPink"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/fridgev2"
                 />
            <TextView
                android:id="@+id/textView33"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="155dp"
                android:text="現在の保有食品を表示する画面です。&#x0A;削除ボタンをタップすることで、食品の数を減らすことができます。"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <View
                android:id="@+id/view11"

                android:layout_width="330dp"
                android:layout_height="90dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/stroke" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="230dp"
                android:text="         履歴"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="226dp"
                android:background="@color/colorPink"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/timerv2" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="255dp"
                android:text="マルナカで買い物した商品とその個数や日付を確認することができます。家計簿の代わりにも♪"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <View
                android:id="@+id/view12"
                android:layout_width="330dp"
                android:layout_height="120dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/stroke" />



            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="330dp"
                android:text="          特売・特価"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="355dp"
                android:text="マルナカの特売商品や、お気に入り店舗限定の特価情報を受け取ることができます。
お気に入り店舗登録はその他画面から登録できます&#x0A;お得に楽しくお買い物しましょう✨"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="325dp"
                android:background="@color/colorPink"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/cartblackv2"
                tools:srcCompat="@drawable/cartblack_v3" />


        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="45dp"

        android:layout_marginBottom="8dp"
        android:background="@drawable/stroke_maru"
        android:text="アプリに進む"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />




</android.support.constraint.ConstraintLayout>